{% extends "base.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/accueil.css') }}"/>
    <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.5.0/css/bootstrap4-toggle.min.css" rel="stylesheet">
{% endblock %}
{% block javascripts %}
<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.5.0/js/bootstrap4-toggle.min.js"></script>
{% endblock %}
{% block body %}
    <div class="panel panel-primary offset-md-3 col-md-6" id="result_panel">
        <div class="panel-heading">
            <h3 class="panel-title">Ajout d'un sous interface</h3>
        </div>
    </div>
    <div class="panel-body offset-md-4 col-md-4">
        <form method="POST" action="{{ path('ajout_interface' ,{'name': nameUrl})}}">
            <input type="hidden" name="type_form" value="interface_ajout">
            <label>Nom de l'interface :
                <select name="interface_name" id="interface_name">
                    {% for interface_name in interface_names %}
                        <option value="{{ interface_name }}">{{ interface_name }}</option>
                    {% endfor %}
                </select>
            </label>
            <input type="checkbox" checked data-toggle="toggle" data-size="xs">
            <br>
            <label>ip de l'interface :
                <input name="ip" type="text" value="">
            </label>
            <br>
            <label>mask de l'interface :
                <input name="mask" type="text" value="">
            </label>
            <br>
            <label>Vlan de l'interface :
                <input name="vlan" type="text">
            </label>
            <br>
            <input type="submit" value="Ajouter">
            <a href="{{path('equipement')}}" class="bt1 btn btn-light" >Retour</a>
        </form>
    </div>
{% endblock %}
